<h1>Add Categories</h1>

<form action="/action_page.php">
    <label><h2>Choose A Category:</h2></label>
    <div>
        <select>
            <option></option>
            {{#each Category}}
            <option> {{name}} </option>
            {{/each}}
        </select>
    </div>
    <label><h2>Enter The Name of the drink:</h2></label>
    <div>
        <input type="text" placeholder="Name Of Drink" id="name">
    </div>
    <label><h2>Enter The Whoelsale Price:</h2></label>
    <div>
        <input type="text" placeholder="Wholesale Price" id="wholesalePrice">
    </div>
    <label><h2>Enter The Retail Price:</h2></label>
    <div>
        <input type="text" placeholder="Retail Price" id="retailPrice">
    </div>
</form>
	<button class="btn btn-info" data-id="{{id}}" data-driinks="{{drinks}}">some btn</button>
</div>

