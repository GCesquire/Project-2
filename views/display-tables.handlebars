<h2>Floor plan</h2>

<div class="flex-wrap">
    {{#each tables }}

    <a href="/food-menu" class="tables" data-toggle="modal" data-target="#table">
        <div>
            <p value="{{tableNumber}}" class="table">{{tableNumber}}</p>
        </div>
    </a>

    {{/each}}

</div>
