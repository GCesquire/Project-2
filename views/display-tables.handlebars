<div id="allTables">
    <h2>Floor plan</h2>
    <div class="flex-wrap">

        {{#each tables }}

        <div class="tables" value="{{id}}" id={{id}}>
            <div>
                <p class="unclickable">{{tableNumber}}</p>
            </div>
        </div>

        {{/each}}
    </div>
</div>
<!--MENU-->
<div class="hide food-menu" id="menu">
    <div class="container ">
        <h1>Menu</h1>
        <div class="row">
            <div class="col-lg-6 table-list">
                <span value="" id="tableID"></span>
                <!--Generated Ordered Items-->
                <div id="result" class="left"></div>
            </div>
            <!--Generated Menu Items-->
            <div class="col-lg-6 menu-list" id="resultDiv"></div>
        </div>
        <div class="row left">
            <div class="col-lg-8">
                <p>Subtotal: $<span id="total"></span></p>
                <p>Tax: $<span id="tax"></span></p>
                <h6>Final amount: $<span id="totalAmount"></span></h6>
            </div>
            <div class="col-lg-4">
                <div class="top-margin right">
                    <button class="btn btn-info" id="send">Send Order</button>
                </div>
                <div class="top-margin right">
                    <a href="/tables">
                        <button class="btn btn-info" id="pay">Pay</button>
                    </a>
                </div>
            </div>
        </div>
    </div>

</div>
