<div class="container food-menu">
    <h1>Drink Menu</h1>
    <div class="row">
        <div class="col-lg-6 table-list">
            <p>Table # {{number}}</p>
            <div id="result" class="left"></div>
        </div>

        <div class="col-lg-6 menu-list">

            {{#each drinkMenu }}

            <button class="btn btn-info drink-item" value="{{name}}"> {{name}} </button>

            {{/each}}
        </div>
    </div>
    <div class="row left">
        <div class="col-lg-8">
            <p>
                Subtotal: $<span id="total"></span>
            </p>
            <p>Tax: $<span id="tax"></span></p>
            <h6>
                Final amount: $<span id="totalAmount"></span>
            </h6>
        </div>
        <div class="col-lg-4">
            <div class="top-margin right">
                <button class="btn btn-info" id="send">Send Order</button>
            </div>
            <div class="top-margin right">
                <button class="btn btn-info" id="pay">Pay</button>
            </div>

        </div>
    </div>
</div>

